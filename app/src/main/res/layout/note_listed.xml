<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:background="@drawable/note_bg"
    android:gravity="center_horizontal"
    >

    <TextView
        android:id="@+id/note_listed_title"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"

        android:ellipsize="end"
        android:singleLine="true"

        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/note_listed_content"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@+id/note_listed_title"
        android:layout_marginTop="0dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:ellipsize="end"
        android:singleLine="true"

        android:textSize="16sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/note_listed_tags"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/note_listed_content"
        android:layout_marginTop="0dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"

        android:textSize="11sp"

        android:ellipsize="end"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/note_listed_time"
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:layout_below="@+id/note_listed_tags"
        android:layout_marginTop="0dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"

        android:textSize="11sp"

        android:ellipsize="end"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/note_listed_len"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/note_listed_tags"
        android:layout_marginTop="0dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"

        android:textSize="11sp"

        android:ellipsize="end"
        android:singleLine="true"
        />


</RelativeLayout>